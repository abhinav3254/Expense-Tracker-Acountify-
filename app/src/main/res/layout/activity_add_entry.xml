<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddEntryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/titleOfEntry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:layout_margin="20dp"
                android:elevation="2dp"
                android:hint="Enter title"
                android:drawableLeft="@drawable/ic_baseline_title_24"
                android:drawablePadding="5dp"
                android:padding="5dp"
                />

            <EditText
                android:id="@+id/amountOfEntry"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rectangle"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:elevation="2dp"
                android:hint="Enter amount"
                android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:inputType="number"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addAmountButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:text="Add"
                android:textAllCaps="false"
                android:backgroundTint="@color/main"
                app:cornerRadius="10dp"
                android:elevation="2dp"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>